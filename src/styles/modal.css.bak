/* モーダル 基本 */
.modal {
  display: none;
  position: fixed;
  inset: 0; /* top:0;right:0;bottom:0;left:0; */
  z-index: 2000;
  align-items: center;
  justify-content: center;
}

/* オーバーレイ */
.modal__overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.5);
  backdrop-filter: blur(2px);
}

/* ダイアログ本体 */
.modal__dialog {
  position: relative;
  background: #fff;
  border-radius: 8px;
  max-width: 720px;
  width: calc(100% - 40px);
  margin: 16px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.2);
  z-index: 2001;
  transform: translateY(12px);
  opacity: 0;
  transition: transform 180ms ease, opacity 180ms ease;
}

/* ヘッダー・コンテンツ */
.modal__header {
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding: 16px;
  border-bottom: 1px solid #eee;
}
.modal__content {
  padding: 16px;
  max-height: 60vh;
  overflow-y: auto;
}

/* 閉じるボタン */
.modal__close {
  background: transparent;
  border: none;
  font-size: 24px;
  line-height: 1;
  cursor: pointer;
}

/* 開いた状態 */
.modal[aria-hidden="false"] {
  display: flex;
}
.modal[aria-hidden="false"] .modal__dialog {
  transform: translateY(0);
  opacity: 1;
}

/* ============ レスポンシブデザイン ============ */
/* モバイル: 0～767px */
@media (max-width: 767px) {
  .modal__dialog {
    max-width: calc(100% - 20px);
    width: 100%;
    margin: 10px;
  }
  
  .modal__header {
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
  }
  
  .modal__header h3 {
    font-size: 18px;
    width: 100%;
  }
  
  .modal__close {
    align-self: flex-end;
    font-size: 20px;
  }
  
  .modal__content {
    max-height: 70vh;
    font-size: 14px;
    padding: 12px;
  }
  
  .modal__content h4 {
    font-size: 14px;
    margin-top: 10px;
  }
  
  .modal__content p {
    font-size: 13px;
  }
}

/* タブレット: 768px～1023px */
@media (min-width: 768px) and (max-width: 1023px) {
  .modal__dialog {
    max-width: calc(100% - 40px);
    margin: 20px;
  }
  
  .modal__content {
    max-height: 65vh;
    font-size: 15px;
  }
}

/* デスクトップ: 1024px～ */
@media (min-width: 1024px) {
  .modal__dialog {
    max-width: 720px;
    width: calc(100% - 40px);
    margin: 16px;
  }
  
  .modal__content {
    max-height: 60vh;
    font-size: 16px;
  }
}