.skill_modal_open{
    border:none;
}
.skill_lang{
    width: 100px;
    height: 100px;
    padding: 10px;
    border-radius: 10px;
    display: inline-block;
}
.html{
    background-color: #f54927;
}
.css{
    background-color: #663399;
}
.javascript{
    background-color: #f0dB4f;
}
.cpp{
    background-color: #00599c;
}
.python{
    background-color: #4b8bbe;
}
.git{
    background-color: #f1502f;
}
.github{
    background-color: #666666;
}
.vscode{
    background-color: #0098ff;
}
.typst{
    background-color: #7fdbff;
}
.solidworks{
    background-color: #da291c;
}
.project_img{
    width: 480px;
    height: 270px;
}
.project_icon{
    width: 480px;
    height:270px;
}

/* ============ レスポンシブデザイン ============ */
/* モバイル: 0～767px */
@media (max-width: 767px) {
  .skill_lang {
    width: 60px;
    height: 60px;
    padding: 5px;
    margin: 5px;
  }
  
  .project_img,
  .project_icon {
    width: 100%;
    max-width: 280px;
    height: auto;
    margin: 10px 0;
  }
  
  .frontend, .backend, .devtool, .other {
    margin: 10px 0;
  }
  
  .frontend h3, .backend h3, .devtool h3, .other h3 {
    font-size: 16px;
    margin-top: 15px;
  }
}

/* タブレット: 768px～1023px */
@media (min-width: 768px) and (max-width: 1023px) {
  .skill_lang {
    width: 80px;
    height: 80px;
    padding: 8px;
    margin: 8px;
  }
  
  .project_img,
  .project_icon {
    width: calc(100% - 20px);
    max-width: 400px;
    height: auto;
    margin: 15px 10px;
  }
}

/* デスクトップ: 1024px～ */
@media (min-width: 1024px) {
  .skill_lang {
    width: 100px;
    height: 100px;
    padding: 10px;
  }
  
  .project_img,
  .project_icon {
    width: 480px;
    height: 270px;
  }
}